<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_10"
    tools:context=".GuidelinesAnimatedCardViewActivity"
    android:animateLayoutChanges="true">

    <id.co.edtslib.uikit.viewgroup.AnimatedCardView
        android:id="@+id/animatedCardViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/s"
            android:paddingVertical="@dimen/m2"
            android:text="This is Animated CardView"/>

    </id.co.edtslib.uikit.viewgroup.AnimatedCardView>

    <id.co.edtslib.uikit.viewgroup.AnimatedCardView
        android:id="@+id/animatedCardViewFade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/s"
            android:paddingVertical="@dimen/m2"
            android:text="This is Animated CardView"/>

    </id.co.edtslib.uikit.viewgroup.AnimatedCardView>

    <id.co.edtslib.uikit.viewgroup.AnimatedCardView
        android:id="@+id/animatedCardViewFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/s"
            android:paddingVertical="@dimen/m2"
            android:text="This is Animated CardView"/>

    </id.co.edtslib.uikit.viewgroup.AnimatedCardView>

    <id.co.edtslib.uikit.viewgroup.AnimatedCardView
        android:id="@+id/animatedCardViewHeader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s"
        app:layout_constraintTop_toBottomOf="@id/animatedCardViewHeader">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/s"
            android:paddingVertical="@dimen/m2"
            android:text="This is Animated CardView"/>

    </id.co.edtslib.uikit.viewgroup.AnimatedCardView>

    <id.co.edtslib.uikit.viewgroup.AnimatedCardView
        android:id="@+id/animatedCardViewFooter2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/s"
        app:layout_constraintBottom_toTopOf="@id/animatedCardViewFooter">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/s"
            android:paddingVertical="@dimen/m2"
            android:text="This is Animated CardView"/>

    </id.co.edtslib.uikit.viewgroup.AnimatedCardView>

</androidx.constraintlayout.widget.ConstraintLayout>