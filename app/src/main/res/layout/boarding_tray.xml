<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <id.co.edtslib.uikit.boarding.BoardingView
        android:id="@+id/boardingView"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_0"
        android:layout_marginBottom="@dimen/m2"
        app:layout_constraintHeight_percent="0.835"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ctaDivider"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/ctaDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/s"
        android:layout_marginHorizontal="@dimen/s"
        app:dividerColor="@color/black_30"
        app:layout_constraintBottom_toTopOf="@id/btnTest"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTest"
        style="@style/Widget.EDTS.UIKit.Button.Filled.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/s"
        android:layout_marginBottom="@dimen/xs"
        android:text="@string/test_button_text"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>