<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <id.co.edtslib.uikit.alert.AlertBox
            android:id="@+id/abDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s"
            android:layout_marginHorizontal="@dimen/s"
            app:text="@string/lorem"/>

        <id.co.edtslib.uikit.alert.AlertBox
            android:id="@+id/abSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s"
            android:layout_marginHorizontal="@dimen/s"
            app:text="@string/lorem"
            app:alertType="success"/>

        <id.co.edtslib.uikit.alert.AlertBox
            android:id="@+id/abInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s"
            android:layout_marginHorizontal="@dimen/s"
            app:text="@string/lorem"
            app:alertType="info" />

        <id.co.edtslib.uikit.alert.AlertBox
            android:id="@+id/abWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s"
            android:layout_marginHorizontal="@dimen/s"
            app:text="@string/lorem"
            app:alertType="warning" />

        <id.co.edtslib.uikit.alert.AlertBox
            android:id="@+id/abError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/s"
            android:layout_marginHorizontal="@dimen/s"
            app:text="@string/lorem"
            app:alertType="error" />

        <id.co.edtslib.uikit.alert.AlertBox
            android:id="@+id/abDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/s"
            android:layout_marginBottom="@dimen/s"
            app:isButtonVisible="true"
            app:buttonText="Action"
            app:text="@string/lorem"/>

    </LinearLayout>

</ScrollView>