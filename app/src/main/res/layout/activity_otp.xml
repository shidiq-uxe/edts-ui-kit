<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <id.co.edtslib.uikit.otp.OtpGroup
        android:id="@+id/ogDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <id.co.edtslib.uikit.otp.OtpGroup
        android:id="@+id/ogError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/btnTriggerError"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ogDefault" />

    <Button
        android:id="@+id/btnTriggerError"
        style="@style/Widget.EDTS.UIKit.Button.Outlined.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger Error"
        app:layout_constraintBottom_toBottomOf="@id/ogError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ogError"
        app:layout_constraintTop_toTopOf="@id/ogError" />

</androidx.constraintlayout.widget.ConstraintLayout>