<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="-2dp"
    app:strokeColor="@color/primary_30"
    app:cardBackgroundColor="@color/info_background"
    app:shapeAppearance="@style/ShapeAppearance.EDTS.UIKit.Flat.Corner.Bottom.12"
    android:theme="@style/Theme.EDTS.UIKit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/efContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/iv_confetti"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:src="@drawable/confetti_voucher"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:alpha="0"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLayer"
            android:layout_width="212dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.55" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfo"
            style="?attr/b2Regular"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xs"
            android:layout_marginHorizontal="@dimen/xs"
            android:layout_marginBottom="@dimen/m2"
            android:textColor="@color/black_70"
            android:drawablePadding="@dimen/xxs"
            android:maxLines="1"
            android:ellipsize="end"
            app:drawableStartCompat="@drawable/ic_voucher_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/actionIndicator"
            tools:text="Masukkan kode kupon di sini"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/actionIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/xs"
            android:button="@drawable/ic_arrow_right_16"
            app:buttonTint="@color/primary_30"
            app:layout_constraintTop_toTopOf="@id/tvInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvInfo"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCoupon1"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xs"
            android:layout_marginHorizontal="@dimen/xs"
            android:layout_marginBottom="@dimen/m2"
            android:visibility="gone"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                style="?b1SemiBold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/b2_text_size"
                android:background="@drawable/bg_skeleton_shimmer_6" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCoupon2"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xs"
            android:layout_marginHorizontal="@dimen/xxs"
            android:layout_marginBottom="@dimen/m2"
            android:visibility="gone"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/shimmerCoupon1"
            app:layout_constraintBottom_toBottomOf="parent">

            <!--Todo: Fix background-->
            <View
                style="?b1SemiBold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/b2_text_size"
                android:background="@drawable/bg_skeleton_shimmer_6" />

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>